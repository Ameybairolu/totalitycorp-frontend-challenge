{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["plugin:react/recommended", "standard", "plugin:prettier/recommended"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "quotes": ["error", "double", { "avoidEscape": true }],
        "semi": [2, "always"],
        "no-tabs": "off",
        "react/react-in-jsx-scope": "off"
    }
}
